#!/usr/bin/python3
""" main function """


def validUTF8(data):
    """ determine utf8 """
    continuation_bytes = 0

    for byte in data:
        if continuation_bytes == 0:
            if byte >> 5 == 0b110:
                continuation_bytes = 1
            elif byte >> 4 == 0b1110:
                continuation_bytes = 2
            elif byte >> 3 == 0b11110:
                continuation_bytes = 3
            elif byte >> 7 != 0:  # Single byte (0xxxxxxx) should be 0 in the first bit
                return False
        else:
            if byte >> 6 != 0b10:  # Continuation byte must be 10xxxxxx
                return False
            continuation_bytes -= 1

    return continuation_bytes == 0
